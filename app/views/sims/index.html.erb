<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8 apple_pagination">
    <%= will_paginate @sims %>
    <table class="table table-bordered table-inverse">
      <thead class="thead-inverse">
      <tr>
        <th>Sim Number</th>
        <th>Sim Type</th>
        <th>Environment</th>
      </tr>
      </thead>
      <tbody>
      <% @sims.each do |sim| %>
          <tr>
            <td scope="row"><%= sim.sim_number %></td>
            <td><%= sim.sim_type %></td>
            <td><%= sim.environment.name %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
    <%= will_paginate @sims %>
  </div>
  <div class="col-md-2"></div>
</div>